<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <section class="max-w-2xl mx-auto bg-white p-6 rounded shadow-lg">
      <h2 class="text-2xl font-bold text-blue-700 mb-6">Candidates</h2>
      <ul>
        <% candidates.forEach(candidate => { %>
        <li class="mb-4 p-4 bg-gray-50 rounded">
          <p class="text-gray-800">
            <strong>Name:</strong> <%= candidate.name %>
          </p>
          <p class="text-gray-800">
            <strong>Party:</strong> <%= candidate.party %>
          </p>
          <a
            href="/api/candidate/vote/<%= candidate._id %>"
            class="bg-blue-500 text-white px-4 py-2 rounded mt-2 inline-block"
            >Vote</a
          >
        </li>
        <% }) %>
      </ul>
    </section>
  </body>
</html>

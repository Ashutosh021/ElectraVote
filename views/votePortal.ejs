<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vote Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold text-blue-700 mb-6">Vote Portal</h1>
        <section class="mb-8">
            <h2 class="text-2xl font-semibold mb-4">Candidate List</h2>
            <ul class="bg-white p-4 rounded shadow">
                <% candidates.forEach(candidate => { %>
                    <li class="border-b py-2 flex justify-between items-center">
                        <div>
                            <strong><%= candidate.name %></strong> - <%= candidate.party %>
                        </div>
                        <% if (user.isVoted) { %>
                            <button disabled class="bg-gray-400 text-white px-4 py-2 rounded cursor-not-allowed">
                                Voted
                            </button>
                        <% } else { %>
                            <form action="/api/user/vote/<%= candidate._id %>" method="POST">
                                <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
                                    Vote
                                </button>
                            </form>
                        <% } %>
                    </li>
                <% }); %>
            </ul>
        </section>
    </div>
</body>
</html>
